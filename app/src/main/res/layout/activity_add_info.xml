<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/addinfo_bg"
    tools:context="pushit.pushit.Launcher"

    >


    <TextView
        android:text="내 번호"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textview"
        android:textSize="20sp" />

    <TextView
        android:text="회사명"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_below="@+id/textview"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_info_phonenumber"
        android:layout_alignBottom="@+id/textview"
        android:layout_alignStart="@+id/add_info_company_name"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView6"
        android:text="회사주소"
        android:layout_below="@+id/add_info_company_name"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <TextView
        android:text="직급"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="회사주소를 입력해 주세요"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/add_info_company_name"
        android:id="@+id/add_info_company_address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="회사명을 입력해 주세요"
        android:ems="10"
        android:id="@+id/add_info_company_name"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="직급을 입력해 주세요"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/add_info_company_address"
        android:id="@+id/add_info_company_rank" />

    <Button
        android:text="저장"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/add_info_submit"
        android:layout_below="@+id/add_info_company_rank"
        android:layout_alignEnd="@+id/add_info_company_rank" />
</RelativeLayout>
